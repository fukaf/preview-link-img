{
    "manifest_version": 3,
    "name": "preview link imgs",
    "description": "Preview images of links in the current page.",
    "version": "0.1.0",
    "icons": {
        "16": "icons/icon.png",
        "48": "icons/icon.png",
        "128": "icons/icon.png"
    },
    "options_page": "options.html",

    "web_accessible_resources": [
        {
            "resources": ["icons/icon.png", "icons/top-icon.png"],
            "matches": ["<all_urls>"]
        }
    ],

    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["content.js"]
        }
    ],
    
    "action": {
        "default_popup": "popup.html"
    },

    "permissions": [
        "webNavigation",
        "tabs",
        "storage",
        "activeTab",
        "scripting"
    ]
}